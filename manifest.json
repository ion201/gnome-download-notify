{
    "manifest_version": 2,
    "name": "Download Notifications",
    "description": "Notification integration for downloads.",
    "version": "1.3.0",
    "permissions": ["downloads", "storage", "notifications"],

    "applications": {
        "gecko": {
            "id": "gnome-download-notify@ion201",
            "strict_min_version": "57.0"
        }
    },

    "background": {
        "scripts": ["common.js", "main-webext.js"]
    },

    "icons": {
        "48": "assets/icon48.png",
        "96": "assets/icon96.png"
    },

    "options_ui": {
        "page": "pref/pref.html"
    }
}
